<div class="card">
    <img src="@menuItem.Image" alt="@menuItem.Name" style="width:100%; height:200px; object-fit:cover;" />
    <h2>@menuItem.Name</h2>
    <p>@menuItem.Description</p>
    <p><strong>Price:</strong> $@menuItem.Price</p>
    <p><strong>Available:</strong> @(menuItem.IsAvailable ? "Yes" : "No")</p>
    <p><strong>Vegetarian:</strong> @(menuItem.IsVegetarian ? "Yes" : "No")</p>
</div>
@code
{
    [Parameter, EditorRequired]
    public MenuItem menuItem { get; set; } = default!;
}